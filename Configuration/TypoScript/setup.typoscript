plugin.tx_mobilecompany_mobilecompanyplugin {
  view {
      templateRootPaths.0 = EXT:mobile_company/Resources/Private/Templates/
      templateRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.templateRootPath}
      partialRootPaths.0 = EXT:mobile_company/Resources/Private/Partials/
      partialRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.partialRootPath}
      layoutRootPaths.0 = EXT:mobile_company/Resources/Private/Layouts/
      layoutRootPaths.1 = {$plugin.tx_mobilecompany_mobilecompanyplugin.view.layoutRootPath}
  }
  persistence {
      storagePid = {$plugin.tx_mobilecompany_mobilecompanyplugin.persistence.storagePid}
      #recursive = 1
  }
  features {
      #skipDefaultArguments = 1
      # if set to 1, the enable fields are ignored in BE context
      ignoreAllEnableFieldsInBe = 0
  }
  mvc {
      #callDefaultActionIfActionCantBeResolved = 1
  }
}

//set color and class using constatnt
page.bodyTagCObject = TEXT
page.bodyTagCObject.value = <body class="{$plugin.tx_mobilecompany_mobilecompanyplugin.settings.myBodyClass}" style="background-color: {$plugin.tx_mobilecompany_mobilecompanyplugin.settings.pageBackgroundColor};">
page.includeCSS {
  styles = {$plugin.tx_mobilecompany_mobilecompanyplugin.settings.cssFile}
}

